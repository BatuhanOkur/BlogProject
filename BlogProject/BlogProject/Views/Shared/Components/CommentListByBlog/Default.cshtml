@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">
	<h4>Yorumlar</h4>
	@if(Model.Count() == 0)
	{
		<h6>Bu yazıya daha önce yorum yapılmamış, ilk yorumu siz yapın!</h6>
	}
	else
	{
		@foreach(var comment in Model)
	{
		<div class="media">
			<img src="~/BlogProjectTema/images/t2.jpg" alt="" class="img-fluid" />
			<div class="media-body">
				<h5 class="mt-0">@comment.CommentUserName</h5>
				<h8>Başlık: @comment.CommentTitle</h8>
				<p>
					@comment.CommentContent
				</p>

			</div>
		</div>
	}
	}
</div>